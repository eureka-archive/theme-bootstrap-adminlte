{% extends '@common/Content/Page.twig' %}

{% use '@common/Content/Breadcrumb.twig' %}
{% use '@common/Header/Header.twig' %}
{% use '@common/Side/Left.twig' %}
{% use '@common/Footer/Footer.twig' %}

{% block content %}

    <div class="error-page">
        <h2 class="headline text-yellow">{{ exception.getCode() }}</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> {{ exception.getMessage() }}</h3>

            <p>
                An error has occurred.<br />
                Please contact <a href="mailto:catalog-tech@deezer.com">catalog-tech@deezer.com</a> if the problem persists.
            </p>
        </div>

    </div>

{% endblock %}
